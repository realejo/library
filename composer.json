{
    "name": "realejo/library",
    "description": "Biblioteca com funções comuns.",
    "license" : "Unlicense",
    "type": "library",
    "keywords": [
        "framework",
        "zf2",
        "realejo",
        "cnpj", "cpf", "uf"
    ],
    "homepage": "http://realejo.com.br",
    "require": {
        "php": ">=5.6"
    },
    "require-dev": {
		"friendsofphp/php-cs-fixer": "2.0.*",
        "squizlabs/php_codesniffer": "^2.8",
        "phpunit/PHPUnit": "5.7.*",
        "satooshi/php-coveralls": "^1.0"
	},
	"autoload": {
        "psr-4": {
            "Realejo\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RealejoTest\\": "test/"
        }
    },
    "scripts": {
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "cs-fixer" : "php-cs-fixer fix -v --diff --dry-run",
        "test": "phpunit"
    }
}
